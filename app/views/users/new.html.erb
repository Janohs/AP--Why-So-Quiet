<!-- app/views/users/new.html.erb -->
<div class="registration-page">
  <div class="container vh-100 d-flex align-items-center justify-content-center">
    <!-- Registration Form -->
    <div class="card p-4" style="max-width: 400px; width: 100%; border-radius: 8px;">
      <!-- Logo Placeholder -->
      <div class="d-flex justify-content-center mb-4">
        <div class="logo-placeholder rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
          <span class="text-muted">Logo</span>
        </div>
      </div>
      <!-- Header -->
      <h3 class="text-center mb-4">Sign Up</h3>
      <!-- Registration Form -->
      <%= form_with(model: @user, url: signup_path, local: true) do |f| %>
        <div class="form-group mb-3">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter your username", autofocus: true %>
        </div>
        <div class="form-group mb-3">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
        <div class="form-group mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
        <div class="form-group mb-3">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
        </div>
        <!-- Submit Button -->
        <%= f.submit "Sign Up", class: "btn btn-primary w-100", style: "background-color: #FF8A08; border-color: #FF8A08;" %>
      <% end %>
    </div>
  </div>
</div>