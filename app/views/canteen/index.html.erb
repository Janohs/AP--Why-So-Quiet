<div class="container-fluid">
  <div class="row align-items-start">
    <div class="col-md-3 sidebar">
      <!-- Sidebar content -->
      <div class="list-group">
        <a href="#payment-instructions" class="list-group-item list-group-item-action text-dark font-weight-bold bg-transparent">Payment Instructions</a>
        <a href="#receipt-upload" class="list-group-item list-group-item-action text-dark font-weight-bold bg-transparent">Receipt Upload</a>
        <a href="#payment-history" class="list-group-item list-group-item-action text-dark font-weight-bold bg-transparent">Payment History</a>
      </div>
    </div>
    <div class="col-md-9">
      <div class="content px-0">
        <!-- Canteen Payment Module -->
        <div class="card mb-3" id="payment-instructions">
          <div class="card-body">
            <div class="text-center mb-3">
              <div class="qr-code-placeholder bg-secondary" style="width: 150px; height: 150px; margin: 0 auto;"></div>
              <div class="font-montserrat fs-5 mt-2">Scan the QR Code to Make Payment</div>
            </div>
            <ol class="list-group list-group-numbered font-montserrat">
              <li class="list-group-item">Scan the QR code with your mobile banking app.</li>
              <li class="list-group-item">Complete the payment.</li>
              <li class="list-group-item">Take a screenshot of the payment receipt.</li>
              <li class="list-group-item">Upload the receipt below.</li>
            </ol>
            <!-- Placeholder for receipt upload -->
            <div class="mt-3" id="receipt-upload">
              <input type="file" class="form-control" id="receipt-upload-input">
            </div>
          </div>
        </div>
        <!-- Payment History -->
        <div class="card mb-3" id="payment-history">
          <div class="card-body">
            <h5 class="card-title">Payment History</h5>
            <ul class="list-group list-group-flush">
              <!-- Example payment history items -->
              <li class="list-group-item">Payment 1: $10.00 - 01/01/2024</li>
              <li class="list-group-item">Payment 2: $15.00 - 15/01/2024</li>
              <li class="list-group-item">Payment 3: $12.00 - 28/01/2024</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
